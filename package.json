{
  "name": "coffee-pass",
  "version": "0.3.1",
  "private": true,
  "scripts": {
    "ios": "react-native run-ios --port 8082",
    "start": "react-native start --reset-cache",
    "android": "react-native run-android --port 8082",
    "format": "prettier --write src/**/*.{js,ts,tsx,json}",
    "clean": "rm -rf ios/build ios/Pods android/app/build android/.cxx android/build",
    "purge": "rm -rf node_modules/ pnpm-lock.yaml ios/Podfile.lock && pnpm clean",
    "lint": "eslint src/**/*.{js,ts,tsx}",
    "release": "standard-version"
  },
  "engines": {
    "node": ">=20",
    "pnpm": ">=8"
  },
  "dependencies": {
    "@react-native-clipboard/clipboard": "1.16.3",
    "@react-navigation/native": "7.1.20",
    "@react-navigation/native-stack": "7.6.3",
    "react": "19.1.1",
    "react-native": "0.82.1",
    "react-native-autocomplete-dropdown": "5.0.0",
    "react-native-bootsplash": "6.3.11",
    "react-native-date-picker": "5.0.13",
    "react-native-mmkv": "4.0.1",
    "react-native-nitro-modules": "0.31.9",
    "react-native-safe-area-context": "5.6.2",
    "react-native-screens": "4.18.0",
    "react-native-svg": "15.15.0"
  },
  "devDependencies": {
    "@babel/core": "7.28.5",
    "@babel/preset-env": "7.28.5",
    "@babel/runtime": "7.28.4",
    "@eslint/js": "9.39.1",
    "@react-native-community/cli": "20.0.2",
    "@react-native-community/cli-platform-android": "20.0.2",
    "@react-native-community/cli-platform-ios": "20.0.2",
    "@react-native/babel-preset": "0.82.1",
    "@react-native/codegen": "0.82.1",
    "@react-native/gradle-plugin": "0.82.1",
    "@react-native/metro-config": "0.82.1",
    "@types/react": "19.2.6",
    "@typescript-eslint/eslint-plugin": "8.47.0",
    "@typescript-eslint/parser": "8.47.0",
    "babel-plugin-module-resolver": "5.0.2",
    "eslint": "9.39.1",
    "eslint-plugin-react": "7.37.5",
    "eslint-plugin-react-hooks": "7.0.1",
    "eslint-plugin-react-native": "5.0.0",
    "globals": "16.5.0",
    "prettier": "3.6.2",
    "sharp": "0.34.5",
    "standard-version": "9.5.0",
    "typescript": "5.9.3"
  },
  "standard-version": {
    "preset": "conventionalcommits",
    "releaseCommitMessageFormat": "release: v{{currentTag}}",
    "bumpFiles": [
      "package.json",
      {
        "filename": "android/app/build.gradle",
        "updater": "scripts/gradle-updater.js"
      }
    ]
  }
}
